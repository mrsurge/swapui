<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN" "http://www.freedesktop.org/standards/PolicyKit/1/policyconfig.dtd">
<policyconfig>
  <vendor>Swap Manager</vendor>
  <vendor_url>https://local</vendor_url>

  <!-- Branded auth dialog for pkexec when running the installed helper -->
  <action id="com.openai.swapmanager.exec.swapctl">
    <description>Manage swap files and settings</description>
    <message>Authentication is required to manage swap</message>
    <icon_name>swap-manager</icon_name>
    <defaults>
      <allow_any>no</allow_any>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
    <!-- Match the installed helper path so pkexec shows this branding -->
    <annotate key="org.freedesktop.policykit.exec.path">/usr/local/lib/swap-manager/swapctl.sh</annotate>
    <annotate key="org.freedesktop.policykit.exec.allow_gui">true</annotate>
  </action>

</policyconfig>

